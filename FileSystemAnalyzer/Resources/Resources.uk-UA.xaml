    <sys:String x:Key="CancelButton">Скасування</sys:String>
    <sys:String x:Key="SelectAll">Вибрати все</sys:String>
    <sys:String x:Key="ClearSelection">Очистити вибір</sys:String>

    <!--DataGrid колонки-->
